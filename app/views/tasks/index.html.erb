<h1>タスクの一覧</h1>

<table class="tasks">
  <col class="name" />
  <col class="due_date" />
  <% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.name, task %></td>
    <td><%= task.due_date %></td>
  </tr>
  <% end %>
</table>
<%= link_to t(:new, :default => "New", :scope => [:railties, :scaffold]),
    new_task_path %>
